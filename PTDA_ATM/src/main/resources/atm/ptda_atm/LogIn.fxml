                  <Font name="Calibri Bold" size="30.0" />
               </font>
            </Label>
            <TextField fx:id="cardNumberInput" layoutX="25.0" layoutY="281.0" prefHeight="32.0" prefWidth="295.0" promptText="Card Number..." style="-fx-background-radius: 6;" />
            <PasswordField fx:id="passwordInput" layoutX="25.0" layoutY="332.0" prefHeight="32.0" prefWidth="295.0" promptText="Password..." style="-fx-background-radius: 6;" />
